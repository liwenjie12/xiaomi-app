/* component/search-bar/search-bar.wxss */
.left{
  float:left;
}
.border{
  box-sizing: border-box;
}
.search-box{
  width:100%;
  height:100rpx;
  background: rgb(242,242,242);
}
.search-hide{
  width:100%;
  height: 100rpx;
  top:0;
  left:0;
  opacity: 0;
  z-index: -1;
}
.search-input{
  width:70%;
  height:100rpx;
  padding:15rpx 0;
}
.search-input input{
  height:70rpx;
  background-color: #fff;
  min-height: 0;
}
.search-icon,.search-back{
  width:15%;
  height:100rpx;
  padding:25rpx 0;
  text-align: center;
}
.search-icon image,.search-back image{
  width:50rpx;
  height:50rpx;
}
.absolute{
  position: absolute;
}
.relative{
  position: relative;
}
/* component/shop-cate/shop-cate.wxss */
.border{
  box-sizing: border-box;
}
.shop-cate{
  width:100%;
}
.shop-cate-img{
  width:100%;
  height:400rpx;
}
.shop-cate-box::after{
  content:"";
  display:block;
  clear: both;
}
.shop-cate-list{
  width:50%;
  height:500rpx;
  float: left;
  border-left:1px solid #fff;
  border-right:1px solid #fff;
}
.cate-list-img{
  width:100%;
  height:320rpx;
}
.text-block{
  display: inline-block;
  width:100%;
  text-align: center;
  font-size:28rpx; 
  text-overflow: ellipsis;
  white-space: nowrap;
  padding:0 10rpx;
  overflow:hidden;
}
.cate-list-content{
  font-size:24rpx;
  color:rgba(0,0,0,0.5);
}
.content-delect{
  margin-left:12rpx;
  text-decoration: line-through;
}
.price-color{
  color:#ea625b;
}
.shop-cate-more{
  padding:30rpx;
  color:rgba(0, 0, 0, 0.7);
  font-size:32rpx;
  border-top:2rpx solid #aaa; 
  border-bottom:2rpx solid #aaa;
}
/**index.wxss**/
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.header{
  height:100rpx;
  background-color: rgb(242,242,242);
  width:100%;
  top:0;
  z-index: 10;
}
.header-logo-box,.header-person-box{
  width:15%;
  height:100%;
}
.header-logo{
  height:100rpx;
  width:100%;
}
.header view{
  float:left;
}
.header-search-box{
  height:100rpx;
  padding:20rpx 0;
  width:70%;
}
.header-search{
  height: 60rpx;
  background-color: #fff;
  box-shadow: 0 0 1px rgba(0,0,0,0.3);
  font-size:28rpx;
  border:none;
  outline: none;
  padding-left:30px;
}
.header-search-icon{
  z-index: 2;
  left:5px;
  top:50%;
  transform: translateY(-50%);
}
.header-person{
  width: 50%;
  height:50%;
  left:50%;
  top:50%;
  transform: translate(-50%,-50%);
}
.header-scroll{
  height:80rpx;
  white-space: nowrap;
  background: rgb(242,242,242);
  top:100rpx;
  z-index: 10;
  box-shadow:0 1px 4px -1px rgba(0,0,0,0.3);
}
.scroll-item{
  display:inline-block;
  height:100%;
  line-height: 80rpx;
  font-size: 28rpx;
  padding:0 40rpx;
}
.header-swiper{
  width:100%;
  margin-top:160rpx;
}
.header-swiper image{
  width:100%;
  height:320rpx;
}
.category{
  height:160rpx;
  width: 100%;
}
.category view{
  height:160rpx;
  width: 20%;
  float:left;
}
.category image{
  width:100%;
  height:160rpx;
}